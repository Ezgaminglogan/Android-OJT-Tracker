<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header (Wavy) - Now part of scroll -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="320dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/header_wavy_background"
                    android:scaleType="centerCrop"/>

                <!-- Info Button (Top Left) -->
                <ImageButton
                    android:id="@+id/infoButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="#FFFFFF"
                    android:padding="12dp"
                    android:elevation="5dp"/>

                <!-- Logout Button (Top Right) -->
                <ImageButton
                    android:id="@+id/logoutButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@android:drawable/ic_lock_power_off"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="#FFFFFF"
                    android:padding="12dp"
                    android:elevation="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:padding="24dp">

                    <!-- Profile Photo Section -->
                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp">

                        <!-- Profile Image Circle -->
                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:src="@drawable/default_profile"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circle_background"
                            android:padding="3dp"
                            android:elevation="2dp"/>

                        <!-- Intern Badge -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intern"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/badge_background"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="2dp"
                            android:elevation="3dp"/>
                    </FrameLayout>

                    <!-- User Full Name -->
                    <TextView
                        android:id="@+id/userFullNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp"/>

                    <!-- User Email -->
                    <TextView
                        android:id="@+id/userEmailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="user@email.com"
                        android:textSize="13sp"
                        android:textColor="#F0FDF4"
                        android:alpha="0.9"
                        android:layout_marginTop="2dp"/>

                    <!-- Student ID -->
                    <TextView
                        android:id="@+id/userStudentIdText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: 2024-00001"
                        android:textSize="11sp"
                        android:textColor="#DCFCE7"
                        android:alpha="0.8"
                        android:layout_marginTop="2dp"/>

                    <!-- Edit Profile Button -->
                    <Button
                        android:id="@+id/editProfileButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Edit"
                        android:drawableStart="@drawable/ic_edit"
                        android:drawableTint="#1A202C"
                        android:drawablePadding="6dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#1A202C"
                        android:background="@drawable/button_profile_edit"
                        android:textAllCaps="false"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </RelativeLayout>

            <!-- Main Content Container (Padded) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Quick Stats Grid -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Stats"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A202C"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Total Hours Card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/stat_card_background"
                        android:padding="16dp"
                        android:layout_margin="6dp"
                        android:elevation="3dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_timer"
                            android:tint="#10B981"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:id="@+id/totalHoursValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#10B981"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Hours"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#718096"/>
                    </LinearLayout>

                    <!-- Tasks Completed Card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/stat_card_background"
                        android:padding="16dp"
                        android:layout_margin="6dp"
                        android:elevation="3dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_circle"
                            android:tint="#3B82F6"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:id="@+id/tasksCompletedValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#3B82F6"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tasks Done"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#718096"/>
                    </LinearLayout>

                    <!-- Target Hours Card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/stat_card_background"
                        android:padding="16dp"
                        android:layout_margin="6dp"
                        android:elevation="3dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_school"
                            android:tint="#F59E0B"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:id="@+id/targetHoursValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="600"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#F59E0B"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Target"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#718096"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- NEW: OJT Progress & Next Shift Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <!-- OJT Completion Progress Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/quick_action_card"
                        android:padding="20dp"
                        android:elevation="4dp"
                        android:layout_marginBottom="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OJT Completion"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1A202C"/>

                            <TextView
                                android:id="@+id/completionPercentageText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="0%"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#10B981"/>
                        </RelativeLayout>

                        <ProgressBar
                            android:id="@+id/ojtProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:progress="0"
                            android:max="100"
                            android:progressDrawable="@android:drawable/progress_horizontal"
                            android:progressBackgroundTint="#E2E8F0"
                            android:progressTint="#10B981"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:id="@+id/estimatedCompletionDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Est. Completion: Calculating..."
                            android:textSize="12sp"
                            android:textColor="#718096"
                            android:fontStyle="italic"/>
                    </LinearLayout>

                    <!-- Next Shift Card -->
                    <LinearLayout
                        android:id="@+id/nextShiftCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/today_session_background"
                        android:padding="16dp"
                        android:elevation="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_calendar"
                            android:padding="12dp"
                            android:background="@drawable/circle_background_light_green"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nextShiftTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No upcoming shifts"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>

                            <TextView
                                android:id="@+id/nextShiftTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Go to Schedule to add one"
                                android:textSize="12sp"
                                android:textColor="#DCFCE7"
                                android:alpha="0.8"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NEXT âž”"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:alpha="0.7"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Quick Actions Grid (2x2) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A202C"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:useDefaultMargins="false">

                    <!-- Time Tracking -->
                    <LinearLayout
                        android:id="@+id/timeTrackingButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/quick_action_card"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_alarm"
                            android:padding="10dp"
                            android:tint="#10B981"
                            android:background="@drawable/circle_background_light_green"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Clock"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1A202C"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Log your hours"
                            android:textSize="10sp"
                            android:textColor="#718096"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <!-- My Schedule -->
                    <LinearLayout
                        android:id="@+id/scheduleButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/quick_action_card"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_calendar"
                            android:padding="10dp"
                            android:tint="#3B82F6"
                            android:background="@drawable/circle_background_light_blue"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Schedule"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1A202C"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shift details"
                            android:textSize="10sp"
                            android:textColor="#718096"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <!-- My Tasks -->
                    <LinearLayout
                        android:id="@+id/tasksButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/quick_action_card"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_task"
                            android:padding="10dp"
                            android:tint="#F59E0B"
                            android:background="@drawable/circle_background_light_orange"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tasks"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1A202C"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage work"
                            android:textSize="10sp"
                            android:textColor="#718096"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <!-- Reports -->
                    <LinearLayout
                        android:id="@+id/reportsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/quick_action_card"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_report"
                            android:padding="10dp"
                            android:tint="#8B5CF6"
                            android:background="@drawable/circle_background_light_purple"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reports"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1A202C"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Performance"
                            android:textSize="10sp"
                            android:textColor="#718096"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </GridLayout>

                <!-- Recent Activities -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Activities"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A202C"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:id="@+id/activitiesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/noActivitiesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No recent activities yet.\nComplete tasks or log hours to see updates!"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#718096"
                    android:layout_gravity="center_horizontal"
                    android:padding="24dp"
                    android:visibility="gone"/>

                <!-- Extra padding for bottom -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
