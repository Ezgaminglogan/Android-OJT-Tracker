<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/header_wavy_background">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="About"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        </RelativeLayout>

        <!-- Main Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- App Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/quick_action_card"
                android:padding="24dp"
                android:gravity="center"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <!-- App Icon Placeholder -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_school"
                    android:padding="16dp"
                    android:tint="#FFFFFF"
                    android:background="@drawable/circle_background_light_green"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OJT InternTrack"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A202C"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/versionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 1.0.0"
                    android:textSize="14sp"
                    android:textColor="#718096"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your complete OJT management solution"
                    android:textSize="13sp"
                    android:textColor="#718096"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>
            </LinearLayout>

            <!-- Developer Credits Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/quick_action_card"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEVELOPED BY"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#718096"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/developerNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logan M. Panucat"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A202C"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/developerEmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="logan.panucat2@gmail.com"
                    android:textSize="14sp"
                    android:textColor="#10B981"
                    android:layout_marginBottom="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8F0"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUILT WITH"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#718096"
                    android:layout_marginBottom="12dp"/>

                <!-- Technologies Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins">

                    <!-- Visual Studio -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/stat_card_background"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_code"
                            android:tint="#10B981"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visual Studio"
                            android:textSize="11sp"
                            android:textColor="#1A202C"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- .NET -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/stat_card_background"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_settings"
                            android:tint="#3B82F6"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=".NET"
                            android:textSize="11sp"
                            android:textColor="#1A202C"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Xamarin -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/stat_card_background"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_smartphone"
                            android:tint="#F59E0B"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xamarin"
                            android:textSize="11sp"
                            android:textColor="#1A202C"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- SQLite -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/stat_card_background"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_storage"
                            android:tint="#EF4444"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SQLite"
                            android:textSize="11sp"
                            android:textColor="#1A202C"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Material Design -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/stat_card_background"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_palette"
                            android:tint="#8B5CF6"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Material Design"
                            android:textSize="11sp"
                            android:textColor="#1A202C"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- AI Assisted -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/stat_card_background"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_smart_toy"
                            android:tint="#06B6D4"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI Assisted"
                            android:textSize="11sp"
                            android:textColor="#1A202C"
                            android:gravity="center"/>
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>

            <!-- Features Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/quick_action_card"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KEY FEATURES"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#718096"
                    android:layout_marginBottom="12dp"/>

                <!-- Features Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins">

                    <!-- Time Tracking -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/stat_card_background"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_alarm"
                            android:tint="#10B981"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Tracking"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1A202C"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clock in/out"
                            android:textSize="10sp"
                            android:textColor="#718096"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Schedule -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/stat_card_background"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_calendar"
                            android:tint="#3B82F6"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Schedules"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1A202C"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plan shifts"
                            android:textSize="10sp"
                            android:textColor="#718096"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Tasks -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/stat_card_background"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_task"
                            android:tint="#F59E0B"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Task Tracking"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1A202C"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage work"
                            android:textSize="10sp"
                            android:textColor="#718096"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Reports -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/stat_card_background"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_report"
                            android:tint="#8B5CF6"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reports"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1A202C"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track progress"
                            android:textSize="10sp"
                            android:textColor="#718096"
                            android:gravity="center"/>
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>

            <!-- Contact & Support Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/quick_action_card"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTACT &amp; SUPPORT"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#718096"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need help or have feedback?"
                    android:textSize="14sp"
                    android:textColor="#1A202C"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/supportEmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="logan.panucat2@gmail.com"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#10B981"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Copyright Notice -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â© 2025 OJT InternTrack\nAll rights reserved."
                android:textSize="12sp"
                android:textColor="#718096"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
