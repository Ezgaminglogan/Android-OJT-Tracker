<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#10B981</item>
        <item name="colorPrimaryDark">#059669</item>
        <item name="colorAccent">#10B981</item>
    </style>

    <style name="CalendarDateStyle">
        <item name="android:textColor">#1A202C</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Splash Theme -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_window_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
