<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20000000"/>
            <size android:width="120dp" android:height="120dp"/>
        </shape>
    </item>
    
    <!-- Main gradient background -->
    <item
        android:top="2dp"
        android:bottom="4dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#10B981"
                android:centerColor="#059669"
                android:endColor="#047857"
                android:angle="135"
                android:type="linear"/>
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp"/>
        </shape>
    </item>
    
    <!-- Inner shine effect -->
    <item
        android:top="8dp"
        android:left="8dp"
        android:right="60dp"
        android:bottom="60dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="135"/>
        </shape>
    </item>
</layer-list>
